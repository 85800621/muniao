<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.muniao.dao.RoomImgMapper">
  <resultMap id="BaseResultMap" type="com.muniao.entity.RoomImage">
    <id column="img_id" jdbcType="INTEGER" property="imgId" />
    <result column="room_id" jdbcType="INTEGER" property="roomId"/>
    <result column="img_address" jdbcType="VARCHAR" property="imgAddress" />
  </resultMap>

  <sql id="Base_Column_List">
      img_id,room_id,img_address
  </sql>

  <select id="selectAllByRoomId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    FROM tb_room_img
    WHERE room_id=#{roomId,jdbcType=INTEGER}
  </select>

</mapper>